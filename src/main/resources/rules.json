{
  "rules": [
    {
      "methods": ["GET","DELETE"],
      "pattern": "/konferencije/*",
      "roles": ["ORGANIZATOR","POSJETILAC"]
    },

    {
      "methods": ["GET"],
      "pattern": "/korisnici/moderatori",
      "roles": ["ORGANIZATOR"]
    },
    {
      "methods": ["GET"],
      "pattern": "/lokacije",
      "roles": ["ORGANIZATOR"]
    },
    {
      "methods": ["GET"],
      "pattern": "/sobe/*",
      "roles": ["ORGANIZATOR"]
    },

    {
      "methods": ["GET"],
      "pattern": "/konferencije/*/moderator",
      "roles": [
        "MODERATOR"
      ]
    },
    {
      "methods": ["POST","PATCH"],
      "pattern": "/ocjene",
      "roles": ["MODERATOR"]
    },

    {
      "methods": ["GET"],
      "pattern": "/korisnici/*",
      "roles": [
        "ADMIN"
      ]
    },
    {
      "methods": ["PATCH"],
      "pattern": "/korisnici/*/status",
      "roles": [
        "ADMIN"
      ]
    },

    {
      "methods": ["POST","GET"],
      "pattern": "/posjetioci",
      "roles": ["POSJETILAC"]
    },

    {
      "methods": ["GET"],
      "pattern": "/konferencije/*/posjetilac",
      "roles": ["POSJETILAC"]
    }
  ]
}